<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/org_value_setter_view">

    <LinearLayout
        android:id="@+id/org_value_setter_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/org_image"
            android:layout_marginTop="10dp"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher_round" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/org_name_inputer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/org_name"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/org_info_inputer"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:hint="@string/org_info"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>


        <TextView
            android:id="@+id/org_org_relationship_text_view"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="58sp"
            android:textSize="36sp"
            android:text="@string/org_org_relationship" />

        <TextView
            android:id="@+id/man_org_relationship_text_view"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="58sp"
            android:textSize="36sp"
            android:text="@string/man_org_relationship" />

        <TextView
            android:id="@+id/org_thing_relationship_text_view"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="58sp"
            android:textSize="36sp"
            android:text="@string/org_thing_relationship" />

        <TextView
            android:id="@+id/org_event_relationship_text_view"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="58sp"
            android:textSize="36sp"
            android:text="@string/org_event_relationship" />


        <Button
            android:id="@+id/org_save_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/save"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
